From 906b7e764ac4471a7f2a0d3be5e45c47a5d1f190 Mon Sep 17 00:00:00 2001
From: James Tai <james.tai@realtek.com>
Date: Wed, 7 Dec 2022 13:51:15 +0800
Subject: [PATCH] mailbox: add ifcp mailbox driver for Realtek DHC SoCs

Change-Id: I6d557a9f410572bb1552dad5b996afcd051462cd
---
 drivers/mailbox/Kconfig                  |   7 +
 drivers/mailbox/Makefile                 |   2 +
 2 files changed, 310 insertions(+)

diff --git a/drivers/mailbox/Kconfig b/drivers/mailbox/Kconfig
index c9fc06c7e685..b1305f4e485c 100644
--- a/drivers/mailbox/Kconfig
+++ b/drivers/mailbox/Kconfig
@@ -273,4 +273,11 @@ config QCOM_IPCC
 	  acts as an interrupt controller for receiving interrupts from clients.
 	  Say Y here if you want to build this driver.
 
+config RTK_IFCP_MBOX
+	tristate "Realtek IFCP Mailbox Support"
+	depends on ARCH_REALTEK && RTK_IFCP
+	help
+	  Mailbox implementation for Realtek platform. This mailbox is used
+	  for communication to IFCP. If unsure say N.
+
 endif
diff --git a/drivers/mailbox/Makefile b/drivers/mailbox/Makefile
index c2089f04887e..745a8f9afec0 100644
--- a/drivers/mailbox/Makefile
+++ b/drivers/mailbox/Makefile
@@ -58,3 +58,5 @@ obj-$(CONFIG_SUN6I_MSGBOX)	+= sun6i-msgbox.o
 obj-$(CONFIG_SPRD_MBOX)		+= sprd-mailbox.o
 
 obj-$(CONFIG_QCOM_IPCC)		+= qcom-ipcc.o
+
+obj-$(CONFIG_RTK_IFCP_MBOX)     += rtk-ifcp-mailbox.o
